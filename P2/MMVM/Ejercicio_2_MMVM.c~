#include <stdio.h>
#include <string.h>

int main() {
  
    char buffer[100];
    //Puntero 
    FILE *fp;

    // Abrir o crear un archivo 
    fp = fopen("salida.txt", "w");
    if (fp == NULL) {
        printf("No se pudo abrir el archivo :(\n");
        return 1;
    }

    printf("Escribe hasta 3 líneas de texto. Enter para cada una >>>\n");

    for (int i = 0; i < 3; i++) {
        printf("Línea %d: ", i + 1);

        // fgets lee lo que escriba el usuario
        if (fgets(buffer, sizeof(buffer), stdin) != NULL) {
            // Si el usuario solo presiona ENTER, dejamos de pedir más líneas
            if (strcmp(buffer, "\n") == 0) {
                break;
            }

            // Guardamos la línea en el archivo
            fputs(buffer, fp);
        }
    }

    // Cerramos el archivo
    fclose(fp);

    printf("Las líneas fueron guardadas en 'salida.txt'.\n");

    return 0;
}

